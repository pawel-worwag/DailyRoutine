@page "/auth/login"

<div class="login-widget mt-5">
    @if (Loading)
    {
        <div class="mb-3 row">
            <p>Loading...</p>
        </div>
    }
    else
    {
        @if (Error is null)
        {
            <form @onsubmit="SignIn" method="GET">
                <div class="mb-3">
                    <label for="email-input" class="form-label">Email address</label>
                    <input type="email" class="form-control" id="email-input" placeholder="name@example.com" @bind="Email">
                </div>
                <div class="mb-3">
                    <label for="password-input" class="form-label">Password</label>
                    <input type="password" class="form-control" id="password-input" placeholder="password" @bind="Password">
                </div>
                <div class="mb-3 row">
                    <div class="col">
                        <input class="form-check-input" type="checkbox" value="" id="remember-checkbox" disabled>
                        <label class="form-check-label" for="remember-checkbox">Remember me</label>
                    </div>
                    <div class="col text-end">
                        <NavLink href="/auth/forgot-password">Forgot password?</NavLink>
                    </div>
                </div>
                @if (Warning is not null)
                {
                    <div class="mb-3 card text-white bg-danger">
                        <div class="card-body">
                            <p class="card-text">@Warning</p>
                        </div>
                    </div>
                }
                <div class="mb-3">
                    <button class="btn btn-primary" type="submit">SIGN IN</button>
                </div>
                <div class="mb-3">
                    <p class="text-center">Not a&nbsp;member? <NavLink href="/auth/registration">Registration.</NavLink></p>
                </div>
            </form>
        }
        else
        {
            <div class="mb-3 row">
                <h1 class="display-6">Bad request</h1>
                <p>@Error</p>
            </div>
        }
    }
</div>